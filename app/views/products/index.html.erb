<%= content_tag( :div, '', :id => 'root', :data => @products.to_json, :"data-autocomplete" => @autocomplete_data) %>

<p id="notice"><%= notice %></p>
<%= form_tag products_path, :method => 'get' do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>

  <p>
    <%= text_field_tag :search, params[:search], :id => "products_search" %>
    <%= submit_tag 'Search', :name => nil, :id => "products_submit" %>
  </p>
<% end %>